<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoFundacaoCrianca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoFundacaoCrianca.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Casas da Criancas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="publicoAlvoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cadastro
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="publicoAlvoDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Alunos" asp-action="Index">Alunos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="DadosFamilias" asp-action="Index">Dados das Famílias</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PerfisSociosEconomicos" asp-action="Index">Perfis Socioeconômicos</a></li>
                            </ul>
                        </li>

                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="assistenciaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Atendimentos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="assistenciaDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AssistentesSociais" asp-action="Index">Assistentes Sociais</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Atendimentos" asp-action="Index">Atendimentos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Encaminhamentos" asp-action="Index">Encaminhamentos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Visitas" asp-action="Index">Visitas</a></li>
                            </ul>
                        </li>

                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="academicoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Academico
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="academicoDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cursos" asp-action="Index">Cursos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Matriculas" asp-action="Index">Matrículas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Professores" asp-action="Index">Professores</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Turmas" asp-action="Index">Turmas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Atividades" asp-action="Index">Atividades</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Chamadas" asp-action="Index">Chamadas</a></li>
                            </ul>
                        </li>

                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entidades" asp-action="Index">Entidades</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Fundação Casa das Crianças - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
